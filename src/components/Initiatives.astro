---
import type { ResumeData } from '../data/resume';

interface Props {
  data: ResumeData;
}

const { data } = Astro.props;
---
<div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg">
  <div class="flex items-center mb-6">
    <div class="w-3 h-3 bg-blue-500 rounded-full mr-4"></div>
    <h3 class="text-xl font-bold text-gray-900 dark:text-white">Key Initiatives</h3>
  </div>

  <div class="space-y-6">
    {data.initiatives.filter(i => i.featured).map(item => (
      <div>
        <h4 class="font-bold text-gray-800 dark:text-gray-200 mb-1">{item.name}</h4>
        <p class="text-gray-600 dark:text-gray-300 mb-2">{item.description}</p>
        <p class="text-sm text-green-700 dark:text-green-300 font-medium">
          <span class="font-bold">Impact:</span> {item.impact}
        </p>
      </div>
    ))}
  </div>
</div> 