---
import type { ResumeData } from '../data/resume';

interface Props {
  data: ResumeData;
}

const { data } = Astro.props;
---
<div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg">
  <div class="flex items-center mb-6">
    <div class="w-3 h-3 bg-blue-500 rounded-full mr-4"></div>
    <h3 class="text-xl font-bold text-gray-900 dark:text-white">Skills</h3>
  </div>

  <div class="space-y-6">
    {data.skills.map(category => (
      <div>
        <h4 class="font-bold text-gray-800 dark:text-gray-200 mb-3">{category.name}</h4>
        <div class="flex flex-wrap gap-2">
          {category.skills.map(skill => (
            <span class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full dark:bg-blue-900 dark:text-blue-300">
              {skill.name}
            </span>
          ))}
        </div>
      </div>
    ))}
  </div>
</div> 