---
import type { ResumeData } from '../data/resume';

interface Props {
  data: ResumeData;
}

const { data } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg">
  <div class="flex items-center mb-6">
    <div class="w-3 h-3 bg-blue-500 rounded-full mr-4"></div>
    <h3 class="text-xl font-bold text-gray-900 dark:text-white">Education</h3>
  </div>
  
  <div class="space-y-6">
    {data.education.map(edu => (
      <div>
        <div class="flex justify-between items-baseline">
          <h4 class="font-bold text-gray-800 dark:text-gray-200">{edu.institution}</h4>
          <p class="text-sm text-gray-500 dark:text-gray-400">{edu.startDate} - {edu.endDate}</p>
        </div>
        <p class="text-gray-600 dark:text-gray-300">{edu.degree}</p>
        {edu.description && (
          <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">{edu.description}</p>
        )}
      </div>
    ))}
  </div>
</div> 