---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.astro';
import About from '../components/About.astro';
import Experience from '../components/Experience.astro';
import Education from '../components/Education.astro';
import Initiatives from '../components/Initiatives.astro';
import Skills from '../components/Skills.astro';
import Header from '../components/Header.astro';
import { resumeData } from '../data/resume';
---

<Layout title={`${resumeData.name} - ${resumeData.title}`}>
  <div class="max-w-screen-xl mx-auto p-4 sm:p-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <aside class="lg:col-span-1">
        <div class="lg:sticky lg:top-8">
          <Sidebar data={resumeData} />
        </div>
      </aside>
      <main class="lg:col-span-2 flex flex-col gap-8">
        <Header />
        <section id="about">
          <About data={resumeData} />
        </section>
        <section id="experience">
          <Experience data={resumeData} />
        </section>
        <section id="education">
          <Education data={resumeData} />
        </section>
        <section id="initiatives">
          <Initiatives data={resumeData} />
        </section>
        <section id="skills">
          <Skills data={resumeData} />
        </section>
      </main>
    </div>
  </div>
</Layout>
